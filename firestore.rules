rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow anyone to read the training slots
    match /training_slots/{slot} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "oscar@test.com"; // Restrict writes to admin
    }

    // Allow users to manage their own documents in the 'users' collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}