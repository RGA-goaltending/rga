rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read/update their own profile, but not others'
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Training Slots
    match /training_slots/{slotId} {
      // Any authenticated user can read available slots or their own booked slots
      allow read: if request.auth != null;

      // ONLY an admin can create, update, or delete slots
      allow create, delete, update: if request.auth != null && request.auth.token.email == "codeofsagar@gmail.com";

      // A regular user can ONLY update a slot to book it for themselves,
      // and only if it's currently available.
      allow update: if request.auth != null
                    && request.auth.uid == request.resource.data.userId
                    && resource.data.status == 'available';
    }
  }
}